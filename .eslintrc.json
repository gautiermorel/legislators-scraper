{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "semi": ["always", { "omitLastInOneLineBlock": true }],
    "max-len": ["error", { "code": 150 }],
    "indent": ["error", 2],
    "quotes": ["error", "single"]
  }
}